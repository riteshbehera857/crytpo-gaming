{
	"name": "metagame-platform",
	"version": "0.0.1",
	"description": "Metagame Platform",
	"main": "server.ts",
	"scripts": {
		"dev": "nodemon",
		"build": "rimraf ./dist && tsc && cp -r uploads/ ./dist/",
		"esbuild": "esbuild server.ts --bundle --platform=node --outfile=build/server.js --format=cjs",
		"esbuild:run": "pm2 start build/server.js",
		"pm2": "yarn pm2:stop && yarn --ignore-scripts && yarn build && pm2 start dist/server.js --name='platform' && pm2 log platform",
		"pm2:stop": "pm2 stop platform",
		"format:check": "prettier --check .",
		"format:write": "prettier --write .",
		"lint:check": "eslint .",
		"lint:fix": "eslint --fix .",
		"test": "jest"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/metagame-gs/metagame_platform.git"
	},
